# Core runtime
NODE_ENV=development
LOG_LEVEL=info

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
# Optional Clerk routes (keep in sync with app routes)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/

# Bot protection (Cloudflare Turnstile)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=1x00000000000000000000AA
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA

# DeepL API key — required by scripts/auto-translate.ts
# Get one at https://www.deepl.com/pro-api
DEEPL_API_KEY=

# Optional: disable Next.js telemetry (already set in npm scripts)
# NEXT_TELEMETRY_DISABLED=1

# Optional: site verification (SEO)
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=
NEXT_PUBLIC_BING_SITE_VERIFICATION=

# Admin backend (PostgreSQL shortener lives here)
# Used by the Admin UI and redirect page.
NEXT_PUBLIC_ADMIN_API_BASE_URL=http://localhost:3001
# Optional server-only override (recommended in production)
ADMIN_API_BASE_URL=

# Cloudflare R2 (S3-compatible)
# R2_ENDPOINT defaults to https://<R2_ACCOUNT_ID>.r2.cloudflarestorage.com if not provided
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_ENDPOINT=

# Optional: base URL for public access (custom domain or r2.dev public bucket URL)
# Example: https://assets.example.com
R2_PUBLIC_BASE_URL=

# Optional: signature used in generated IDs (e.g. nico_*, som_*)
ID_SIGNATURE=nico

# Directus CMS — app fetches from DIRECTUS_URL (e.g. https://directus.nicotordev.com)
# Optional token for restricted collections. Scripts: seed-directus.ts, add-directus-rich-fields.ts
# DIRECTUS_URL=https://directus.nicotordev.com
# DIRECTUS_TOKEN=
