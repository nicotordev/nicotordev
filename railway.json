{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "watchPatterns": [
      "app/**",
      "components/**",
      "lib/**",
      "public/**",
      "prisma/**",
      "next.config.ts",
      "package.json",
      "bun.lock",
      "railway.json"
    ]
  },
  "deploy": {
    "startCommand": "HOSTNAME=0.0.0.0 PORT=$PORT NODE_ENV=production NODE_OPTIONS=--enable-source-maps node .next/standalone/server.js",
    "healthcheckPath": "/api/health",
    "restartPolicyType": "ALWAYS",
    "overlapSeconds": 30,
    "drainingSeconds": 10
  },
  "environments": {
    "pr": {
      "deploy": {
        "startCommand": "NEXT_TELEMETRY_DISABLED=1 node_modules/.bin/next start -p $PORT"
      }
    }
  }
}
